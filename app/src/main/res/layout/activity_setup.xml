<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.Entry.SetupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="282dp"
            android:layout_height="139dp"
            android:src="@drawable/logo_gym" />




        <LinearLayout
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Body Stats "
                android:textColor="@color/black"
                android:paddingHorizontal="6dp"
                android:paddingVertical="1dp"
                android:layout_marginBottom="15dp"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                    <EditText
                        android:layout_marginRight="20dp"
                        android:id="@+id/edit_age"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner"
                        android:hint="age"
                        android:inputType="textEmailAddress"
                        android:padding="18dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:layout_marginRight="20dp"

                        android:id="@+id/edit_weight"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner"
                        android:hint="Weight"
                        android:inputType="textEmailAddress"
                        android:padding="18dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edit_height"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner"
                        android:hint="Height"
                        android:inputType="textEmailAddress"
                        android:padding="18dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="20sp" />

            </LinearLayout>


        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Plan Duration "
            android:textColor="@color/black"
            android:paddingHorizontal="6dp"
            android:paddingVertical="1dp"
            android:layout_marginBottom="15dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:hint="Duration in weeks"
            android:inputType="textEmailAddress"
            android:padding="18dp"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"

            android:textColorHint="@color/black"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/edit_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:hint="how many days per week?"
            android:inputType="textEmailAddress"
            android:padding="18dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp" />

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Workout Goals "
                android:textColor="@color/black"
                android:paddingHorizontal="6dp"
                android:paddingVertical="1dp"
                android:layout_marginBottom="15dp"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/listViewGoals"
                style="@style/Widget.AppCompat.ListView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:choiceMode="multipleChoice"
                android:textColor="@color/white" />



        </LinearLayout>





    </LinearLayout>

</ScrollView>