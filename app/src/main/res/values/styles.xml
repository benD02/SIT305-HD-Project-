<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Style for buttons. -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:drawableStart">@drawable/add_button_icon</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:minWidth">16dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CustomDelButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:drawableStart">@drawable/baseline_delete_forever_24</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:minWidth">16dp</item>
        <item name="android:padding">8dp</item>
    </style>



    <!-- Style for EditText -->
    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>

    </style>


</resources>
