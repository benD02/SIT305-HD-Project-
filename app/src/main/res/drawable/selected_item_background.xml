<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid     android:background="@drawable/black_background_square"
                /> <!-- Background color when selected -->
            <stroke
                android:width="2dp"
                android:color="@color/design_default_color_background" /> <!-- Border color when selected -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid     android:background="@drawable/black_background_square" /> <!-- Default background color -->
        </shape>
    </item>
</selector>
